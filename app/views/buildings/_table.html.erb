<table class="table table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <% if request.format.js? %>
      <th>Distance (km)</th>
    <% end %>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @buildings.each_with_index do |building, index| %>
    <tr id="<%= building.id %>">
      <th><%= index + 1 %></th>
      <td><%= building.name %></td>
      <td><%= building.address %></td>
      <td><%= building.latitude %></td>
      <td><%= building.longitude %></td>
      <% if request.format.js? %>
        <td><%= building.distance %></td>
      <% end %>
      <td>
        <%= link_to('Edit', edit_building_path(building.id), remote: true) %>
        |
        <%= link_to('Destroy', building_path(building.id), method: :delete, data: { confirm: 'Are you sure you want to destroy the building?' }) %></td>
    </tr>
  <% end %>
  </tbody>
</table>